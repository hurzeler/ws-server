{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@etek.com.au/ws-server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./model/winchState": {
      "import": "./dist/model/winchState.js",
      "types": "./dist/model/winchState.d.ts"
    },
    "./config/commands": {
      "import": "./dist/config/commands.js",
      "types": "./dist/config/commands.d.ts"
    },
    "./types/winchEnums": {
      "import": "./dist/types/winchEnums.js",
      "types": "./dist/types/winchEnums.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json --outDir dist --declaration --declarationMap --sourceMap && tsc-alias -p tsconfig.json",
    "build:watch": "tsc --project tsconfig.json --outDir dist --declaration --declarationMap --sourceMap --watch",
    "start": "bun src/app.ts",
    "start:monitor": "cross-env NODE_ENV=production bun src/app.ts --monitor",
    "start:headless": "cross-env NODE_ENV=production bun src/app.ts --monitor --headless",
    "start:node": "cross-env NODE_ENV=production node --loader ts-node/esm src/app.ts",
    "start:monitor:node": "cross-env NODE_ENV=production node --loader ts-node/esm src/app.ts --monitor",
    "dev": "bun run build:watch",
    "prepare": "bun run build",
    "dev:headless": "cross-env CONSOLE_LEVEL=debug bun --watch src/app.ts --headless",
    "dev:node": "cross-env CONSOLE_LEVEL=debug ts-node --esm src/app.ts",
    "debug": "cross-env CONSOLE_LEVEL=debug bun --inspect --watch src/app.ts",
    "debug:break": "cross-env CONSOLE_LEVEL=debug bun --inspect-brk --watch src/app.ts",
    "debug:build": "bun run build && cross-env CONSOLE_LEVEL=debug node --inspect dist/app.js",
    "test": "jest --detectOpenHandles --forceExit",
    "check-state-sync": "bun run scripts/check-state-sync.ts",
    "validate-state": "bun run scripts/validate-state-consistency.ts",
    "test:zeroconf": "jest --detectOpenHandles --forceExit test/zeroConf-service.test.ts",
    "monitor": "bun scripts/monitor.ts",
    "monitor:fast": "bun scripts/monitor.ts -i 500",
    "monitor:log": "bun scripts/monitor.ts --no-clear",
    "monitor:standalone": "bun scripts/monitor.ts",
    "monitor:history": "bun scripts/monitor.ts --log-history",
    "test:bun": "bun test && exit 0",
    "test:simulation": "bun src/test-simulation.ts",
    "test:modular": "bun src/test-modular.ts",
    "test:monitoring": "bun scripts/test-monitoring.ts"
  },
  "_moduleAliases": {
    "@": "./dist"
  },
  "dependencies": {
    "@etek.com.au/logger": "link:@etek.com.au/logger",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.17.1",
    "@types/ws": "^8.5.10",
    "bonjour": "^3.5.0",
    "jest": "^29.7.0",
    "module-alias": "^2.2.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ws": "8.14.2"
  },
  "devDependencies": {
    "@types/bonjour": "^3.5.13",
    "@types/bun": "latest",
    "cross-env": "^10.0.0",
    "tsc-alias": "^1.8.16"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  }
}